<UserControl
    x:Class="LobbyHostingModule.Views.LobbyView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:SketchRoom.Toolkit.Wpf.Controls;assembly=SketchRoom.Toolkit.Wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LobbyHostingModule.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="450"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="100" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <controls:CardControl
            Grid.Row="0"
            Width="200"
            Margin="10"
            HorizontalAlignment="Left"
            Background="#f0f0f0">
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,5"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Connection" />
                <TextBlock Text="From here you can start a lobby room." TextWrapping="Wrap" />
                <TextBlock Text="{Binding SessionCode}" TextWrapping="Wrap" />
                <controls:ActionButton
                    Margin="0,10,0,0"
                    ButtonCommand="{Binding StartLobbyCommand}"
                    ButtonText="Start Lobby"
                    IsButtonEnabled="{Binding IsStartLobbyEnabled}" />
            </StackPanel>
        </controls:CardControl>

        <controls:CardControl
            Grid.Row="0"
            Width="200"
            Margin="10"
            HorizontalAlignment="Right"
            Background="#f0f0f0">
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,5"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Start sketch session" />
                <TextBlock Text="From here you can start the session when everybody is connected." TextWrapping="Wrap" />
                <TextBlock TextWrapping="Wrap" />
                <controls:ActionButton
                    Margin="0,10,0,0"
                    VerticalAlignment="Bottom"
                    ButtonCommand="{Binding StartSessionCommand}"
                    ButtonText="Start Session"
                    IsButtonEnabled="{Binding IsStartLobbyEnabled}" />
            </StackPanel>
        </controls:CardControl>

        <controls:CardControl
            Grid.Row="0"
            Width="200"
            Margin="10"
            HorizontalAlignment="Center"
            Background="#f0f0f0">
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,5"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Session code generated." />
                <TextBlock Text="Start share this code to other participants to acces your room" TextWrapping="Wrap" />
                <TextBlock
                    Margin="0,20,0,0"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="{Binding SessionCode}" />
            </StackPanel>
        </controls:CardControl>

        <Separator Grid.Row="1" />

        <StackPanel
            Grid.Row="2"
            Margin="10"
            Orientation="Vertical">
            <TextBlock FontSize="20" Text="Sketch Room Settings" />
        </StackPanel>

        <Separator Grid.Row="3" />

        <StackPanel Grid.Row="4" Background="LightYellow">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="Participants" />
                <controls:Participants
                    Grid.Row="1"
                    Margin="10"
                    ParticipantsSource="{Binding ConnectedParticipants}" />
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
