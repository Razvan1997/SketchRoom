<UserControl
    x:Class="WalkthroughDemo.ArrowedPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WalkthroughDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  săgeată  -->
            <RowDefinition Height="*" />
            <!--  conținut + footer  -->
        </Grid.RowDefinitions>

        <!--  🔻 Săgeată  -->
        <Polygon
            x:Name="ArrowPolygon"
            Grid.Row="0"
            Height="10"
            HorizontalAlignment="Center"
            Fill="#2B2B2B"
            Points="0,10 10,0 20,10"
            RenderTransformOrigin="0.5,0.5" />

        <!--  🧾 Conținut + footer  -->
        <Border
            Grid.Row="1"
            Width="270"
            Padding="12"
            CornerRadius="8"
            Style="{StaticResource WalkthroughPopupStyle}">
            <StackPanel>
                <!--  Descriere  -->
                <TextBlock
                    x:Name="DescriptionText"
                    Margin="0,0,0,8"
                    Style="{StaticResource WalkthroughTextStyle}"
                    TextWrapping="Wrap" />

                <!--  Separator  -->
                <Separator Margin="0,8,0,8" />

                <!--  Butoane  -->
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button
                        Width="50"
                        Height="30"
                        Padding="8,4"
                        Click="SkipAll_Click"
                        Content="Skip All"
                        Style="{StaticResource DarkFlatButtonStyle}" />
                    <Button
                        Width="50"
                        Height="30"
                        Padding="8,4"
                        Click="Next_Click"
                        Content="Next"
                        Style="{StaticResource DarkFlatButtonStyle}" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
