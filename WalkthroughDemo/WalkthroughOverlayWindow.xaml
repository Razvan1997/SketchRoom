<Window
    x:Class="WalkthroughDemo.WalkthroughOverlayWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WalkthroughDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="WalkthroughOverlayWindow"
    Width="800"
    Height="450"
    Opacity="0"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Topmost="True"
    WindowState="Maximized"
    WindowStyle="None"
    mc:Ignorable="d">
    <Canvas x:Name="OverlayCanvas">
        <!--  fundal semi-transparent  -->
        <Rectangle
            x:Name="OverlayBackground"
            Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Window}}"
            Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Window}}"
            Fill="#AA000000" />

        <!--  Tooltip + indicator  -->
        <Border
            x:Name="TooltipBorder"
            Padding="12"
            Background="White"
            CornerRadius="8"
            Visibility="Collapsed">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="10"
                    Direction="270"
                    Opacity="0.4"
                    ShadowDepth="3" />
            </Border.Effect>
            <TextBlock
                x:Name="TooltipText"
                MaxWidth="250"
                Foreground="Black"
                TextWrapping="Wrap" />
        </Border>
    </Canvas>
</Window>
