<UserControl
    x:Class="WhiteBoardModule.XAML.GenericShapeControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WhiteBoardModule.XAML"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
    Width="100"
    Height="60"
    Background="Transparent"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="VerticalDashedLineThumbStyle" TargetType="Thumb">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Canvas>
                            <Line
                                Stroke="DodgerBlue"
                                StrokeDashArray="4 2"
                                StrokeThickness="2"
                                X1="0"
                                X2="0"
                                Y1="0"
                                Y2="{TemplateBinding ActualHeight}" />
                        </Canvas>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HorizontalDashedLineThumbStyle" TargetType="Thumb">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Canvas>
                            <Line
                                Stroke="DodgerBlue"
                                StrokeDashArray="4 2"
                                StrokeThickness="2"
                                X1="0"
                                X2="{TemplateBinding ActualWidth}"
                                Y1="0"
                                Y2="0" />
                        </Canvas>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <ContentPresenter
            x:Name="ShapePresenter"
            Margin="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" />
        <!--  Thumbs pentru resize  -->
        <Thumb
            x:Name="ResizeTopLeft"
            Margin="-10,-10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Cursor="SizeNWSE"
            Style="{StaticResource ResizeThumbCircleStyle}"
            Tag="Resize"
            Visibility="Collapsed" />

        <!--  Top  -->
        <Thumb
            x:Name="ResizeTop"
            Margin="0,-10,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Cursor="SizeNS"
            Style="{StaticResource ResizeThumbCircleStyle}"
            Tag="Resize"
            Visibility="Collapsed" />

        <!--  TopRight  -->
        <Thumb
            x:Name="ResizeTopRight"
            Margin="0,-10,-10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Cursor="SizeNESW"
            Style="{StaticResource ResizeThumbCircleStyle}"
            Tag="Resize"
            Visibility="Collapsed" />

        <!--  Right  -->
        <Thumb
            x:Name="ResizeRight"
            Margin="0,0,-10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Cursor="SizeWE"
            Style="{StaticResource ResizeThumbCircleStyle}"
            Tag="Resize"
            Visibility="Collapsed" />

        <!--  BottomRight  -->
        <Thumb
            x:Name="ResizeBottomRight"
            Margin="0,0,-10,-10"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Cursor="SizeNWSE"
            Style="{StaticResource ResizeThumbCircleStyle}"
            Tag="Resize"
            Visibility="Collapsed" />

        <!--  Bottom  -->
        <Thumb
            x:Name="ResizeBottom"
            Margin="0,0,0,-10"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Cursor="SizeNS"
            Style="{StaticResource ResizeThumbCircleStyle}"
            Tag="Resize"
            Visibility="Collapsed" />

        <!--  BottomLeft  -->
        <Thumb
            x:Name="ResizeBottomLeft"
            Margin="-10,0,0,-10"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Cursor="SizeNESW"
            Style="{StaticResource ResizeThumbCircleStyle}"
            Tag="Resize"
            Visibility="Collapsed" />

        <!--  Left  -->
        <Thumb
            x:Name="ResizeLeft"
            Margin="-10,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Cursor="SizeWE"
            Style="{StaticResource ResizeThumbCircleStyle}"
            Tag="Resize"
            Visibility="Collapsed" />

        <!--  Top connector  -->
        <Rectangle
            x:Name="ConnectorTop"
            Width="20"
            Height="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Cursor="Cross"
            Fill="DodgerBlue"
            Tag="Connector"
            Visibility="Collapsed" />

        <!--  Right connector  -->
        <Rectangle
            x:Name="ConnectorRight"
            Width="10"
            Height="20"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Cursor="Cross"
            Fill="DodgerBlue"
            Tag="Connector"
            Visibility="Collapsed" />

        <!--  Bottom connector  -->
        <Rectangle
            x:Name="ConnectorBottom"
            Width="20"
            Height="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Cursor="Cross"
            Fill="DodgerBlue"
            Tag="Connector"
            Visibility="Collapsed" />

        <!--  Left connector  -->
        <Rectangle
            x:Name="ConnectorLeft"
            Width="10"
            Height="20"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Cursor="Cross"
            Fill="DodgerBlue"
            Tag="Connector"
            Visibility="Collapsed" />

        <svgc:SvgViewbox
            x:Name="RotateIcon"
            Width="20"
            Height="20"
            Margin="0,-25,-25,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Source="pack://application:,,,/SketchRoom.Toolkit.Wpf;component/Resources/rotate.svg"
            Stretch="Uniform"
            Tag="Rotate"
            Visibility="Collapsed" />
    </Grid>
</UserControl>
