<UserControl
    x:Class="WhiteBoardModule.XAML.GenericShapeControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WhiteBoardModule.XAML"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="100"
    Height="60"
    Background="Transparent"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="VerticalDashedLineThumbStyle" TargetType="Thumb">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Canvas>
                            <Line
                                Stroke="DodgerBlue"
                                StrokeDashArray="4 2"
                                StrokeThickness="2"
                                X1="0"
                                X2="0"
                                Y1="0"
                                Y2="{TemplateBinding ActualHeight}" />
                        </Canvas>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HorizontalDashedLineThumbStyle" TargetType="Thumb">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Canvas>
                            <Line
                                Stroke="DodgerBlue"
                                StrokeDashArray="4 2"
                                StrokeThickness="2"
                                X1="0"
                                X2="{TemplateBinding ActualWidth}"
                                Y1="0"
                                Y2="0" />
                        </Canvas>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <ContentPresenter
            x:Name="ShapePresenter"
            Margin="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" />
        <!--  Thumbs pentru resize  -->
        <Thumb
            x:Name="ResizeLeft"
            Width="2"
            HorizontalAlignment="Left"
            VerticalAlignment="Stretch"
            Cursor="SizeWE"
            Style="{StaticResource VerticalDashedLineThumbStyle}"
            Visibility="Collapsed" />

        <Thumb
            x:Name="ResizeRight"
            Width="2"
            HorizontalAlignment="Right"
            VerticalAlignment="Stretch"
            Cursor="SizeWE"
            Style="{StaticResource VerticalDashedLineThumbStyle}"
            Visibility="Collapsed" />

        <Thumb
            x:Name="ResizeTop"
            Height="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Cursor="SizeNS"
            Style="{StaticResource HorizontalDashedLineThumbStyle}"
            Visibility="Collapsed" />

        <Thumb
            x:Name="ResizeBottom"
            Height="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            Cursor="SizeNS"
            Style="{StaticResource HorizontalDashedLineThumbStyle}"
            Visibility="Collapsed" />


        <!--  Top connector  -->
        <Rectangle
            x:Name="ConnectorTop"
            Width="20"
            Height="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Cursor="Cross"
            Fill="DodgerBlue"
            Tag="Connector"
            Visibility="Collapsed" />

        <!--  Right connector  -->
        <Rectangle
            x:Name="ConnectorRight"
            Width="10"
            Height="20"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Cursor="Cross"
            Fill="DodgerBlue"
            Tag="Connector"
            Visibility="Collapsed" />

        <!--  Bottom connector  -->
        <Rectangle
            x:Name="ConnectorBottom"
            Width="20"
            Height="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Cursor="Cross"
            Fill="DodgerBlue"
            Tag="Connector"
            Visibility="Collapsed" />

        <!--  Left connector  -->
        <Rectangle
            x:Name="ConnectorLeft"
            Width="10"
            Height="20"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Cursor="Cross"
            Fill="DodgerBlue"
            Tag="Connector"
            Visibility="Collapsed" />
    </Grid>
</UserControl>
