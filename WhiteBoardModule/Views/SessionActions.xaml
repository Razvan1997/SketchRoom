            <StackPanel
                Grid.Column="14"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Border
                    Width="200"
                    Height="30"
                    Margin="4,0"
                    Background="SteelBlue"
                    CornerRadius="2"
                    Cursor="Hand"
                    ToolTip="Save sketch">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseLeftButtonUp">
                            <prism:InvokeCommandAction Command="{Binding OpenSaveSketchDialogCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Text="Save sketch" />
                </Border>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>