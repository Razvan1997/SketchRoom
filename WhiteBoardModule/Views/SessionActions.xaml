            <Border
                Grid.Column="9"
                Width="1"
                Height="30"
                HorizontalAlignment="Center"
                Background="#2D2D30" />

            <StackPanel Grid.Column="10" Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,10,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="White"
                    Text="Z-Index" />

                <ToggleButton IsChecked="{Binding IsZIndex, Mode=TwoWay}" Style="{StaticResource ToolToggleButtonStyle}">
                    <svgc:SvgViewbox
                        Width="24"
                        Height="24"
                        Source="pack://application:,,,/WhiteBoardModule;component/Resources/forward-item.svg" />
                </ToggleButton>
            </StackPanel>

