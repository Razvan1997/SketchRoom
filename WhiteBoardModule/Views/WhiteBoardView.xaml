<UserControl
    x:Class="WhiteBoardModule.Views.WhiteBoardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:SketchRoom.Toolkit.Wpf.Controls;assembly=SketchRoom.Toolkit.Wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ei="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:WhiteBoardModule.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:vm="clr-namespace:WhiteBoardModule.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">


    <Grid Background="Gray">

        <!--  Whiteboard ocupă toată zona  -->
        <controls:WhiteBoardControl
            x:Name="Whiteboard"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" />

        <!--  Panoul de acțiuni din stânga  -->
        <local:LeftToolsActionsView
            Width="200"
            Margin="20,20,0,20"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="Transparent" />

        <!--  Panoul de sesiune din dreapta sus  -->
        <local:SessionActions
            Margin="20"
            HorizontalAlignment="Right"
            VerticalAlignment="Top" />


        <local:BottomToolsActionsView
            Width="200"
            Margin="20,20,0,20"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Background="Transparent" />

    </Grid>
</UserControl>
