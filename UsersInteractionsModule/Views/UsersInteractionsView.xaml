<UserControl
    x:Class="UsersInteractionsModule.Views.UsersInteractionsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:interactivity="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:UsersInteractionsModule.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="450"
    d:DesignWidth="200"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">


    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/UsersInteractionsModule;component/Resources/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="MenuColumn" Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="#191b36">
            <StackPanel>
                <!--  Create Sketch Room item  -->
                <Button
                    Margin="10"
                    Padding="10"
                    Background="#2a2d4d"
                    BorderThickness="0"
                    Command="{Binding CreateSketchRoomCommand}"
                    Content="Create sketch room"
                    Cursor="Hand"
                    FontSize="16"
                    Foreground="White"
                    Tag="CreateSketchRoom" />

                <Button
                    Margin="10"
                    Padding="10"
                    Background="#2a2d4d"
                    BorderThickness="0"
                    Command="{Binding ParticipateSketchRoomCommand}"
                    Content="Participate to a room"
                    Cursor="Hand"
                    FontSize="16"
                    Foreground="White"
                    Tag="CreateSketchRoom" />

                <!--  Alte iteme aici dacă vrei  -->
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
