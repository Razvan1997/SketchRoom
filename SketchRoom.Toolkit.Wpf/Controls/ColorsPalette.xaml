<UserControl
    x:Class="SketchRoom.Toolkit.Wpf.Controls.ColorsPalette"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Root"
    d:DesignHeight="50"
    d:DesignWidth="50"
    mc:Ignorable="d">

    <Grid>
        <!--  Bulina colorată  -->
        <Ellipse
            x:Name="ColorButton"
            Width="24"
            Height="24"
            Cursor="Hand"
            Fill="{Binding SelectedColor, ElementName=Root}"
            MouseLeftButtonDown="ColorButton_Click"
            Stroke="Black"
            StrokeThickness="1" />
    </Grid>
</UserControl>