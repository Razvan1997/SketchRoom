<UserControl
    x:Class="SketchRoom.Toolkit.Wpf.Controls.Participants"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:SketchRoom.Toolkit.Wpf.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SketchRoom.Toolkit.Wpf.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="root"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <conv:ImagePathToImageSourceConverter x:Key="ImagePathConverter" />
        <conv:ByteArrayToImageConverter x:Key="ByteArrayToImageConverter" />
        <conv:EncryptedDataToImageConverter x:Key="EncryptedDataToImageConverter" />
    </UserControl.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
        <ItemsControl ItemsSource="{Binding ParticipantsSource, ElementName=root}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel
                        Width="60"
                        Margin="5"
                        HorizontalAlignment="Center">
                        <Border
                            Width="60"
                            Height="60"
                            Background="Gray"
                            ClipToBounds="True"
                            CornerRadius="30"
                            Loaded="Border_Loaded"
                            Opacity="0">
                            <Image
                                Width="60"
                                Height="60"
                                Source="{Binding ImageBase64, Converter={StaticResource EncryptedDataToImageConverter}}"
                                Stretch="Fill" />
                        </Border>
                        <TextBlock
                            Margin="0,4,0,0"
                            HorizontalAlignment="Center"
                            FontSize="10"
                            Text="{Binding Name}"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>
