<UserControl
    x:Class="SketchRoom.Toolkit.Wpf.Controls.ActionButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SketchRoom.Toolkit.Wpf.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Button
            Padding="10,5"
            Background="Green"
            BorderBrush="Transparent"
            BorderThickness="0"
            Command="{Binding ButtonCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Content="{Binding ButtonText, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Cursor="Hand"
            FontWeight="Bold"
            Foreground="White"
            IsEnabled="{Binding IsButtonEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}" />
    </Grid>
</UserControl>
