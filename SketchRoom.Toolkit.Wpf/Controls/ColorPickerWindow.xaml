<Window
    x:Class="SketchRoom.Toolkit.Wpf.Controls.ColorPickerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SketchRoom.Toolkit.Wpf.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="300"
    Height="370"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Border
        Padding="12"
        Background="#2e2e2e"
        BorderBrush="#555"
        BorderThickness="1"
        CornerRadius="8">
        <StackPanel>
            <!--  Top: Color Area  -->
            <Grid Height="160" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <!--  Preview  -->
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" />
                    <!--  SV Selector  -->
                </Grid.ColumnDefinitions>

                <!--  Live Preview  -->
                <Border
                    Grid.Column="0"
                    Background="Transparent"
                    BorderBrush="Gray"
                    BorderThickness="0"
                    CornerRadius="4">
                    <Rectangle
                        x:Name="LivePreview"
                        Margin="6"
                        Fill="White"
                        RadiusX="2"
                        RadiusY="2" />
                </Border>

                <!--  Saturation/Value Selection  -->
                <Canvas
                    x:Name="ColorGrid"
                    Grid.Column="2"
                    Width="150"
                    Height="150"
                    Background="Transparent">

                    <Rectangle
                        x:Name="ColorArea"
                        Width="150"
                        Height="150"
                        Fill="White"
                        MouseDown="ColorArea_MouseDown"
                        MouseMove="ColorArea_MouseMove"
                        MouseUp="ColorArea_MouseUp"
                        RadiusX="4"
                        RadiusY="4"
                        Stroke="Gray" />

                    <Ellipse
                        x:Name="ColorCursor"
                        Width="12"
                        Height="12"
                        Fill="Transparent"
                        IsHitTestVisible="False"
                        Stroke="White"
                        StrokeThickness="2" />
                </Canvas>
            </Grid>

            <!--  Hue Slider  -->
            <Slider
                x:Name="HueSlider"
                Height="20"
                Margin="0,0,0,12"
                Maximum="360"
                Minimum="0"
                Style="{StaticResource HueSliderStyle}"
                ValueChanged="HueSlider_ValueChanged" />

            <!--  Hex Field  -->
            <TextBox
                x:Name="HexBox"
                Width="100"
                Margin="0,0,0,12"
                HorizontalAlignment="Left"
                Style="{StaticResource DarkTextBoxStyle}"
                TextChanged="HexBox_TextChanged" />

            <!--  Buttons  -->
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button
                    Width="60"
                    Margin="0,0,10,0"
                    Click="CancelButton_Click"
                    Content="Cancel"
                    Style="{StaticResource DarkFlatButtonStyle}" />
                <Button
                    Width="60"
                    Click="SaveButton_Click"
                    Content="Save"
                    Style="{StaticResource DarkFlatButtonStyle}" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
