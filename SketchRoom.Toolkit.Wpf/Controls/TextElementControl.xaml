<UserControl
    x:Class="SketchRoom.Toolkit.Wpf.Controls.TextElementControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SketchRoom.Toolkit.Wpf.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
    MinWidth="150"
    MinHeight="40"
    mc:Ignorable="d">

    <Border
        Panel.ZIndex="99"
        Background="Transparent"
        MouseLeftButtonDown="OnMouseLeftButtonDown"
        MouseLeftButtonUp="OnMouseLeftButtonUp"
        MouseMove="OnMouseMove">
        <Grid
            x:Name="MainGrid"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="Transparent">

            <!--  Drag area  -->
            <Border
                Background="Transparent"
                MouseLeftButtonDown="OnMouseLeftButtonDown"
                MouseLeftButtonUp="OnMouseLeftButtonUp"
                MouseMove="OnMouseMove" />

            <!--  Editable Text  -->
            <TextBox
                x:Name="EditableTextBox"
                MinWidth="150"
                MinHeight="30"
                Padding="4"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                VerticalContentAlignment="Center"
                AcceptsReturn="True"
                Background="Transparent"
                BorderThickness="0"
                FontSize="40"
                Text="Text"
                TextChanged="EditableText_TextChanged"
                TextWrapping="Wrap" />

            <!--  Rotate Icon  -->
            <svgc:SvgViewbox
                x:Name="RotateIcon"
                Width="20"
                Height="20"
                Margin="0,-25,-25,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Source="pack://application:,,,/SketchRoom.Toolkit.Wpf;component/Resources/rotate.svg"
                Stretch="Uniform"
                Visibility="Collapsed" />
        </Grid>
    </Border>



</UserControl>
