<Window
    x:Class="SketchRoom.Dialogs.ContinueDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:SketchRoom.Converters"
    xmlns:local="clr-namespace:SketchRoom.Dialogs"
    Width="900"
    Height="600"
    AllowsTransparency="True"
    Background="#FF1E1E1E"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <Window.Resources>
        <converters:HalfMinus90Converter x:Key="HalfMinus90Converter" />
    </Window.Resources>

    <Border
        Padding="30"
        Background="#FF2C2C2C"
        BorderBrush="#444"
        BorderThickness="1"
        CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Welcome text + create form when no sketches  -->
            <StackPanel
                x:Name="WelcomePanel"
                Grid.Row="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="Collapsed">
                <TextBlock
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="👋 Welcome to SketchRoom" />
                <TextBlock
                    Margin="0,0,0,30"
                    HorizontalAlignment="Center"
                    FontSize="16"
                    Foreground="LightGray"
                    Text="Let's create your first sketch" />

                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <TextBox
                        x:Name="FirstSketchNameTextBox"
                        Width="300"
                        Height="30"
                        Margin="0,0,10,0"
                        VerticalContentAlignment="Center"
                        FontSize="14"
                        Style="{StaticResource DarkTextBoxStyle}" />
                    <Button
                        Width="100"
                        Height="30"
                        Click="Create_Click"
                        Content="Create"
                        Style="{StaticResource DarkFlatButtonStyle}" />
                </StackPanel>
            </StackPanel>

            <!--  Existing sketches panel  -->
            <Grid x:Name="SketchListPanel" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <!--  scrollabil  -->
                    <RowDefinition Height="Auto" />
                    <!--  fix (create sketch)  -->
                </Grid.RowDefinitions>

                <!--  Scrollable content  -->
                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="28"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="Hi, John" />

                        <TextBlock
                            Margin="0,6,0,20"
                            HorizontalAlignment="Center"
                            FontSize="18"
                            Foreground="LightGray"
                            Text="Continue where you left off?" />

                        <!--  Previews  -->
                        <ItemsControl x:Name="PreviewStack">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Width="140"
                                        Height="200"
                                        Margin="10"
                                        Background="#FF3A3A3A"
                                        BorderBrush="#666"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        MouseLeftButtonUp="Preview_Click">
                                        <Border.Effect>
                                            <DropShadowEffect
                                                BlurRadius="6"
                                                Opacity="0.5"
                                                ShadowDepth="4" />
                                        </Border.Effect>
                                        <StackPanel>
                                            <Image
                                                Height="140"
                                                Margin="6"
                                                RenderOptions.BitmapScalingMode="HighQuality"
                                                SnapsToDevicePixels="True"
                                                Source="{Binding Thumbnail}"
                                                Stretch="UniformToFill" />
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                FontSize="12"
                                                FontWeight="Bold"
                                                Foreground="White"
                                                Text="{Binding TabName}" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>

                <!--  Create new sketch: always visible  -->
                <StackPanel
                    Grid.Row="1"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Foreground="LightGray"
                        Text="Create new sketch?" />
                    <TextBox
                        x:Name="NewSketchNameTextBox"
                        Width="300"
                        Height="30"
                        Margin="0,0,10,0"
                        VerticalContentAlignment="Center"
                        FontSize="14"
                        Style="{StaticResource DarkTextBoxStyle}" />
                    <Button
                        Width="100"
                        Height="30"
                        Click="Create_Click"
                        Content="Create"
                        Style="{StaticResource DarkFlatButtonStyle}" />

                    <Button
                        x:Name="CancelButton"
                        Width="100"
                        Height="30"
                        Margin="20,0,0,0"
                        Click="Close_Click"
                        Content="Cancel"
                        Style="{StaticResource DarkFlatButtonStyle}" />
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>