<Window
    x:Class="SketchRoom.Dialogs.SettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SketchRoom.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Settings"
    Width="500"
    Height="450"
    Background="#404040"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Titlu  -->
        <TextBlock
            Margin="0,0,0,20"
            FontSize="20"
            FontWeight="Bold"
            Foreground="White"
            Text="Settings" />

        <!--  Path selector  -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock
                Margin="0,0,0,4"
                Foreground="White"
                Text="Ghost Preview Save Path" />
            <DockPanel>
                <TextBox
                    x:Name="txtPath"
                    Width="320"
                    Height="30"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    Style="{StaticResource DarkTextBoxStyle}" />
                <Button
                    Width="100"
                    Height="30"
                    Command="{Binding BrowseCommand}"
                    Content="Browse"
                    Style="{StaticResource DarkFlatButtonStyle}" />
            </DockPanel>
        </StackPanel>

        <!--  Hotkeys  -->
        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <TextBlock
                Margin="0,0,0,4"
                Foreground="White"
                Text="Hotkey (Default: TAB + S)" />

            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <TextBox
                    x:Name="txtHotkey1"
                    Width="100"
                    Height="30"
                    IsReadOnly="True"
                    PreviewKeyDown="txtHotkey1_PreviewKeyDown"
                    Style="{StaticResource DarkTextBoxStyle}"
                    Text="CTRL" />

                <TextBlock
                    Margin="10,0,10,15"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Foreground="White"
                    Text=" + " />

                <TextBox
                    x:Name="txtHotkey2"
                    Width="100"
                    Height="30"
                    PreviewKeyDown="txtHotkey2_PreviewKeyDown"
                    Style="{StaticResource DarkTextBoxStyle}" />
            </StackPanel>
        </StackPanel>

        <!--  Buttons  -->
        <StackPanel
            Grid.Row="4"
            Margin="0,20,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="100"
                Height="30"
                Margin="0,0,10,0"
                Click="BtnCancel_Click"
                Content="Close"
                Style="{StaticResource DarkFlatButtonStyle}" />
            <Button
                Width="100"
                Height="30"
                Click="BtnSave_Click"
                Content="Save"
                Style="{StaticResource DarkFlatButtonStyle}" />
        </StackPanel>
    </Grid>
</Window>