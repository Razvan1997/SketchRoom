<Window
    x:Class="SketchRoom.Dialogs.ConfirmationDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prism="http://prismlibrary.com/"
    Width="400"
    Height="160"
    prism:ViewModelLocator.AutoWireViewModel="True"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">
    <Grid>
        <Border
            Padding="20"
            Background="#404040"
            BorderBrush="#292828"
            BorderThickness="1"
            CornerRadius="8">
            <StackPanel>
                <TextBlock
                    x:Name="TitleTextBlock"
                    Margin="0,0,0,10"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="White" />
                <TextBlock
                    x:Name="MessageTextBlock"
                    Margin="0,0,0,20"
                    Foreground="White"
                    TextWrapping="Wrap" />
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button
                        Width="100"
                        Height="30"
                        Margin="0,0,10,0"
                        Click="CancelButton_Click"
                        Content="Cancel"
                        Style="{StaticResource DarkFlatButtonStyle}" />
                    <Button
                        Width="100"
                        Click="ConfirmButton_Click"
                        Content="Confirm"
                        Style="{StaticResource DarkFlatButtonStyle}" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
