<Window
    x:Class="SketchRoom.Dialogs.RegistrationDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prism="http://prismlibrary.com/"
    Width="400"
    Height="Auto"
    prism:ViewModelLocator.AutoWireViewModel="True"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    WindowStyle="None">

    <Grid>
        <!--  Fundalul negru semi-transparent  -->
        <Rectangle Fill="Black" Opacity="0.5" />

        <!--  Dialogul propriu-zis  -->
        <Border
            Width="400"
            Padding="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="White"
            CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,10">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="Date conectare" />
                </StackPanel>

                <!--  First Name  -->
                <StackPanel Grid.Row="1" Margin="0,0,0,10">
                    <TextBlock FontWeight="Bold" Text="Prenume" />
                    <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <!--  Last Name  -->
                <StackPanel Grid.Row="2" Margin="0,0,0,10">
                    <TextBlock FontWeight="Bold" Text="Nume" />
                    <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <!--  Image Path  -->
                <!--  Imagine de profil rotundă + link de selectare poză  -->
                <StackPanel
                    Grid.Row="3"
                    Margin="0,10"
                    HorizontalAlignment="Center">
                    <Ellipse
                        x:Name="ProfileEllipse"
                        Width="100"
                        Height="100"
                        Margin="0,0,0,5"
                        Stroke="Gray"
                        StrokeThickness="1">
                        <Ellipse.Fill>
                            <ImageBrush x:Name="ProfileImageBrush" Stretch="UniformToFill" />
                        </Ellipse.Fill>
                    </Ellipse>

                    <TextBlock
                        HorizontalAlignment="Center"
                        Cursor="Hand"
                        Foreground="Blue"
                        MouseDown="SelectImage_MouseDown"
                        Text="Selectează o poză"
                        TextDecorations="Underline" />
                </StackPanel>

                <!--  Button  -->
                <StackPanel
                    Grid.Row="4"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        Width="100"
                        Command="{Binding SaveCommand}"
                        Content="Salvează" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>