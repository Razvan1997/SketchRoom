<UserControl
    x:Class="TopBarModule.Views.TopBarView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TopBarModule.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="150"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/TopBarModule;component/Resources/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{StaticResource BlackBrush}">
        <StackPanel
            Margin="0,10,10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Orientation="Horizontal">

            <!--  Minimize  -->
            <Button
                Width="40"
                Height="20"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding MinimizeCommand}">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="16"
                    Foreground="{StaticResource WhiteBrush}"
                    Text="&#xE921;" />
            </Button>

            <!--  Maximize  -->
            <Button
                Width="40"
                Height="20"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding MaximizeCommand}">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="16"
                    Foreground="{StaticResource WhiteBrush}"
                    Text="&#xE922;" />
            </Button>

            <!--  Close  -->
            <Button
                Width="40"
                Height="20"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding CloseCommand}">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="16"
                    Foreground="{StaticResource WhiteBrush}"
                    Text="&#xE8BB;" />
            </Button>

        </StackPanel>
    </Grid>
</UserControl>
